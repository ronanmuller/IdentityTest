@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="LoginUser.Email" class="control-label"></label>
                <input asp-for="LoginUser.Email" class="form-control" />
                <span asp-validation-for="LoginUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginUser.Password" class="control-label"></label>
                <input asp-for="LoginUser.Password" class="form-control" type="password" />
                <span asp-validation-for="LoginUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div class="form-group">
                <span asp-validation-summary="All" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}